@{
    <h3>@PrintStatus()</h3>
}

<div class="board">
    @for (int i = 0; i < 9; i++)
    {
        int squareNumber = i;
        <Square @key=squareNumber
                value=values[squareNumber]
                ClickHandler="@(() => HandleClick(squareNumber))"/>
    }
</div>

<button class="btn btn-primary" @onclick="PlayAgainHandler">
    New game
</button>
